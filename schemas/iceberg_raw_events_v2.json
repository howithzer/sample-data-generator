{
    "name": "iceberg_raw_events_v2",
    "version": "2.0.0",
    "description": "Iceberg V3 raw events schema with nested structs for Phase 3",
    "envelope": {
        "messageId": "uuid",
        "publishTime": "timestamp"
    },
    "payload": {
        "sessionId": "uuid",
        "event": {
            "verb": {
                "type": "choice",
                "options": [
                    "POST",
                    "GET",
                    "PUT",
                    "DELETE",
                    "PATCH"
                ]
            },
            "eventType": {
                "type": "choice",
                "options": [
                    "Heartbeat",
                    "Login",
                    "Logout",
                    "Transaction",
                    "PageView",
                    "Click"
                ]
            },
            "applicationId": "integer",
            "userId": "uuid",
            "timestamp": "timestamp",
            "metadata": {
                "ipAddress": "ipv4",
                "userAgent": "text",
                "deviceId": "uuid"
            }
        }
    }
}